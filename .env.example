# Database Configuration
# Used by both drizzle.config.ts and src/db/index.ts
DATABASE_URL=postgres://postgres:postgres@localhost:5432/monorepo_db

# Server Configuration
PORT=8080
HOST=0.0.0.0

# CORS (for development)
# In production, replace '*' with your actual domains
CORS_ORIGIN=*

# Mobile App Configuration
# API URL for the mobile app (Expo will read EXPO_PUBLIC_* variables)
# Set this to your Fly.io app URL (e.g., https://your-app.fly.dev)
EXPO_PUBLIC_API_URL=https://crowd-wtd6ka.fly.dev

# Backend Selection (used by dev scripts)
# Set to 'true' to use Fly.io backend, 'false' to use localhost
USE_FLY_BACKEND=false
