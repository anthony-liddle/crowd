# Database Configuration
# Used by both drizzle.config.ts and src/db/index.ts
DATABASE_URL=postgres://postgres:postgres@localhost:5432/monorepo_db

# Server Configuration
PORT=8080
HOST=0.0.0.0

# CORS (for development)
# In production, replace '*' with your actual domains
CORS_ORIGIN=*

# Mobile App Configuration
# API URL for the mobile app (Expo will read EXPO_PUBLIC_* variables)
EXPO_PUBLIC_API_URL=http://localhost:8080

# DevTools Configuration
# API URL for the devtools app (Vite will read VITE_* variables)
VITE_API_BASE_URL=http://localhost:8080
